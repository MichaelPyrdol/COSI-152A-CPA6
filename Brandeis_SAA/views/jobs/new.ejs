<div class="data-form">
    <form action="/jobs/create" method="POST">
      <h1>Create New Job</h1>
      <label for="inputTitle">Title</label>
      <input
        type="text"
        name="title"
        id="inputTitle"
        autofocus
        required
      />
      <br>
      <label for="inputCompany">Company</label>
      <input
        type="text"
        name="company"
        id="inputCompany"
        required
      />
      <br>
      <label for="inputLocation">Location</label>
      <input
        type="text"
        name="location"
        id="inputLocation"
        required
      />
      <br>
      <label for="inputDescription">Description</label>
      <input
        type="text"
        name="description"
        id="inputDescription"
        required
      />
      <br>
      <br>
      <label for="inputRequirements">Requirements</label>
      <input
        type="text"
        name="requirements"
        id="inputRequirements"
        required
      />
      <br>
      <label for="inputSalary">Salary</label>
      <input
        type="text"
        name="salary"
        id="inputSalary"
      />
      <br>
      <br>
      <label for="inputContactEmail">Contact Email</label>
      <input
        type="text"
        name="contactEmail"
        id="inputContactEmail"
        required
      />
      <br>
      <label for="inputContactPhone">Contact Phone</label>
      <input
        type="text"
        name="contactPhone"
        id="inputContactPhone"
        required
      />
      <br>
      <br>
      <label for="inputPostDate">Post Date</label>
      <input
        type="date"
        name="postDate"
        id="inputPostDate"
      />
      <br>
      <label for="inputDeadlineDate">Deadline Date</label>
      <input
        type="date"
        name="deadlineDate"
        id="inputDeadlineDate"
      />
      <br>
      <label for="inputIsActive">Is Active</label>
      <input
        type="text"
        name="isActive"
        id="inputIsActive"
      />
      <br>
      <br>
      <button type="submit">Create new job</button>
    </form>
  </div>